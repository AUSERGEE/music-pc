{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "paths": {
      "/@/*": [
        "src/*"
      ],
      "/pages/*": [
        "src/pages/*"
      ],
      "/components/*": [
        "src/components/*"
      ],
      "/assets/*": [
        "src/assets/*"
      ],
      "/utils/*": [
        "src/utils/*"
      ],
      "/requests/*": [
        "src/apis/requests/*"
      ],
      "/typings/*": [
        "src/typings/*"
      ],
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.js"
  ]
}
