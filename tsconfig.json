{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "paths": {
      "/@/*": [
        "src/*"
      ],
      "/pages/*": [
        "src/pages/*"
      ],
      "/components/*": [
        "src/components/*"
      ],
      "/assets/*": [
        "src/assets/*"
      ],
      "/utils/*": [
        "src/utils/*"
      ],
      "/requests/*": [
        "src/apis/requests/*"
      ],
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": [
    "node_modules"
  ]
}
